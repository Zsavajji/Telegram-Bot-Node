<!-- Metatags -->
meta(name="language" content=meta.locale)
meta(http-equiv="X-UA-Compatible" content="IE=edge")
meta(name="viewport" content="width=device-width, initial-scale=1.0")
meta(charset="utf-8")
if  pages[page].contact
  meta(name="contact" content=pages[page].contact)
if  pages[page].author
  meta(name="author" content=pages[page].author)
if pages[page].description
  meta(name="description" content=pages[page].description)
if pages[page].keywords
  meta(name="keywords" content=pages[page].keywords)

<!-- Facebook / Open Graph -->
if meta.og_enabled
  meta(property="fb:app_id" content="")
  meta(property="og:title" content=pages[page].title)
  meta(property="og:description" content=pages[page].description)
  meta(property="og:site_name" content=sitename)
  meta(property="og:type" content="website")
  meta(property="og:url" content=pages[page].url)
  meta(property="og:image" content=pages[page].image)

<!-- Twitter / Open Graph -->
meta(name="twitter:card" content="summary_large_image")
meta(name="twitter:site" content="@project")
meta(name="twitter:title" content=pages[page].title)
meta(name="twitter:description" content=pages[page].description)
meta(name="twitter:image" content="")

<!-- Google+ / Schema.org -->
meta(itemprop="name" content="")
meta(itemprop="description" content=pages[page].description)
meta(itemprop="image" content="")

